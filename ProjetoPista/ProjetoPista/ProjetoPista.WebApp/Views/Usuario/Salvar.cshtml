@model ProjetoPista.Model.Dtos.UsuarioDto
@section Scripts
    {
    <script src="~/js/Usuario/SalvarUsuario.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" type="text/css" />
    <link rel="stylesheet" href="~/css/bootstrap-multiselect.css" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/bootstrap-multiselect.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>

}
@{ var tempData = TempData["ErroAutenticacao"];
                var erroAutenticacao = tempData != null ? tempData.ToString() : string.Empty; }
<div class="container-fluid">
    <div class="row">
        <div class="col">
            <h2 class="display-4">@ViewData["Title"]</h2>
        </div>
    </div>

    <div class="row mt-4 mb-4">
        <div class="col">
            <a class="btn btn-primary" asp-controller="Usuario" asp-action="Consultar"><i class="fas fa-arrow-circle-left"></i> Voltar</a>
            @*<a id="btn-salvar" class="btn btn-primary" asp-controller="Usuario" asp-action="Salvar"><i class="fas fa-plus-circle"></i> Salvar</a>*@
            <input class="btn btn-primary" type="submit" value="Salvar" form="frm-usuario" />
        </div>
    </div>

    <div class="row">
        <div class="col">
            <form id="frm-usuario" asp-controller="Usuario" asp-action="Salvar" method="post">
                <fieldset>
                    @Html.HiddenFor(model => model.IdUsuario)
                    <div class="form-group row">
                        <label asp-for="Nome" class="col-sm-2 col-form-label">Nome</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", placeholder = "Nome completo" })
                            @Html.ValidationMessageFor(model => model.Nome, string.Empty, htmlAttributes: new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Login" class="col-sm-2 col-form-label">Login</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.Login, new { @class = "form-control", placeholder = "Login" })
                            @Html.ValidationMessageFor(model => model.Login, string.Empty, htmlAttributes: new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "E-mail", @type = "Email" })
                            @Html.ValidationMessageFor(model => model.Email, string.Empty, htmlAttributes: new { @class = "text-danger" })
                        </div>
                    </div>
                    @if (Model.IdUsuario == 0)
                    {
        <div class="form-group row">
            <label asp-for="Senha" class="col-sm-2 col-form-label">Senha</label>
            <div class="col-sm-10">
                @Html.PasswordFor(model => model.Senha, new { @class = "form-control", placeholder = "Senha" })
                @Html.ValidationMessageFor(model => model.Senha, string.Empty, htmlAttributes: new { @class = "text-danger" })

            </div>
        </div>}

                    
                </fieldset>
            </form>
        </div>
    </div>
</div>
