@model IEnumerable<ProjetoPista.Model.Dtos.PistaDto>
@{ ViewData["Title"] = "Pistas"; }
@section Scripts
{
    <script src="~/js/Usuario/ConsultarUsuario.js" asp-append-version="true"></script>
}

<!-- Comment <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"> -->
<div class="container-fluid">
    <div class="row">
        <div class="col">
            <h2 class="display-4">Aprovação de Pistas</h2>
        </div>
    </div>

    <div class="row mt-4 mb-4">
        <div class="col">
            <a class="btn btn-primary" asp-controller="Aprovacoes" asp-action="Novo"><i class="fas fa-plus-circle"></i> Novo</a>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">id</th>
                        <th scope="col">nome</th>
                        <th scope="col">horário</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
        <tr>
            <th scope="row">
                <a class="btn btn-success btn-sm" asp-controller="Aprovacoes" asp-action="GerenciarImagens" asp-route-id="@item.id_pista"><i class="fa fa-eye"></i></a>
                <a class="btn btn-info btn-sm" asp-controller="Aprovacoes" asp-action="Editar" asp-route-id="@item.id_pista"><i class="fas fa-pen-alt"></i></a>
                <a data-title="Exclusão" data-message="Deseja realmente excluir?" class="btn btn-danger btn-sm btn-delete" asp-area="Painel" asp-controller="Aprovacoes" asp-action="Excluir" asp-route-id="@item.id_pista"><i class="fas fa-trash-alt"></i></a>
            </th>
            <td>@item.id_pista</td>
            <td>@item.nm_pista</td>
            <td>@item.ds_horario_funcionamento</td>
        </tr>
}
                </tbody>
            </table>

        </div>
    </div>
</div>