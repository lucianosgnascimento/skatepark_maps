@model ProjetoPista.Model.Dtos.PistaFullDto
@section Scripts
    {
    
}
<style>
    

    .enderecoTexto {
        width: 80%;
        float: left;
        display: inline-block;
        /* position: relative;*/
    }

    .copyEndereco {
        width: 20%;
        /* float: left; */
        display: inline-block;
        position: relative;
        text-align: center;
        margin-top: 18px;
        cursor: pointer;
    }

        .copyEndereco:hover > .endereco {
            background-color: darkgray;
        }

</style>

<div class="info_content">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">

        <div class="carousel-inner">
            
            <div class="carousel-item active">
            <img class="first-slide" src="~/imagensPistas/@Model.nm_imagens.First()" alt="First slide">
            </div>         
            @foreach (var item in Model.nm_imagens.Skip(1))
            {
            <div class="carousel-item">
            <img class="first-slide" src="~/imagensPistas/@item" alt="First slide">
            </div>            
            }

            <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Voltar</span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Avançar</span>
            </a>
        </div>
    </div>
    @*<img class="card-img-toptext-center w-100" src="~/files/CapaCadastroPista.jpg" alt="Card image cap">*@
<div class="pista-info ">
    <h2 class="info_location_title">@Model.nm_pista</h2>
    <h2 class="info_location_name" id="codP" hidden>@Model.id_pista</h2>
    <p class="info_location_text">Pista de dificuldade <b>@Model.niveisSelecionados.First()</b> </p>

    <div class=" endereco">
        <div class="enderecoTexto">
            <p class="info_location_call" id="enderecoPista"><span><i class="fa fa-map-marker"></i></span>@Model.ds_endereco.ToString() @Model.nr_endereco.ToString() - @Model.nm_cidade.ToString() @Model.nm_estado.ToString() @Model.cd_cep.ToString()</p>
        </div>
        <div class="copyEndereco">
            <i class="fa fa-copy"></i>
        </div>
    </div>


    <div class="mr-12 spot-feature">
        <h3 class="info_location_name">Modalidades</h3>
        <div class="form-group row">


            @foreach (var item in Model.modalidadesSelecionadas)
            {
<div class="spot-type line">

    <input type="checkbox" id="myCheckbox7" disabled="true" />
    <label for="myCheckbox7">
        <img src="~/files/1099640.png" />
        <span>@item.ToString()</span>

    </label>
</div>}



        </div>
    </div>
    <div class="mr-12 spot-feature">
        <h3 class="info_location_name">Professores</h3>

        <div class="spot-type">
            @foreach (var item in Model.professores) // valeria a pena pegar o array já embaralhado
            {
                <a name="Professor" value="@item.id_professor" title="Ver Professor"><img src="~/imagensProf/@item.nm_profile" alt="Avatar" class="avatar"></a> 
            }
            @if (!Model.professores.Any())
            {
                <p class="info_location_call" >Sem professores para exibir</p>
            }

            @if (Model.professores.Count() > 5)
            {<a class="avatar  avatar-plus"> <i class="fas fa-plus"></i> </a>}
        </div>

    </div>
    @*
        <div class="mr-12 spot-feature">
            <h3 class="info_location_name">Tags</h3>

        </div>
        @*
            <a href="#" class="btn-link">Saiba mais</a>
    *@
    
</div>
</div>
